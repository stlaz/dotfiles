{
    "window.menuBarVisibility": "compact",
    "window.titleBarStyle": "native",
    "window.customTitleBarVisibility": "never",
    "window.density.editorTabHeight":"default",
    "window.zoomLevel": -0.8,
    "window.menuStyle": "custom",

    "workbench.colorTheme": "Tokyo Night Light",
    "workbench.startupEditor": "none",
    "workbench.settings.editor": "json",
    // keep tabs opened on opening via Ctrl + P
    "workbench.editor.enablePreviewFromQuickOpen": false,

    "editor.fontSize": 10,
    "editor.fontFamily": "'FiraCode Nerd Font', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "editor.renderWhitespace": "boundary",
    "editor.tabSize": 4,
     // links mess up clicking golang imports
    "editor.links": false,
    "editor.stickyScroll.enabled": true, // for now, disable if it sucks

    "editor.rulers": [
        80
    ],

    "editor.bracketPairColorization.enabled": true,
    "terminal.integrated.fontSize": 9,

    "telemetry.telemetryLevel": "off",

    "diffEditor.ignoreTrimWhitespace": false,

    // should hopefully prevent 'Getting token failed: Error: The name org.freedesktop.secrets was not provided by any .service files'
    "git.terminalAuthentication": false,
    "python.jediEnabled": false,
    "go.useLanguageServer": true,
    "go.testFlags": ["-race"],
    "go.formatTool": "goimports",

    "github.gitAuthentication": false,
    "chat.mcp.enabled": false,
    "chat.mcp.discovery.enabled": false,
    "github.copilot.chat.newWorkspaceCreation.enabled": false,
    "github.copilot.chat.startDebugging.enabled": false,
    "python.analysis.typeCheckingMode": "standard",
    "github.copilot.nextEditSuggestions.enabled": false,
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "go": false
    },
}
